@model List<EcommerceApp.Models.CarritoItem>
@{
    ViewData["Title"] = "Mi Carrito";
}

<div class="row">
    <div class="col-12">
        <h2 class="mb-4">üõí Mi Carrito de Compras</h2>

        @if (Model == null || Model.Count == 0)
        {
            <div class="alert alert-info">
                <h4>Tu carrito est√° vac√≠o</h4>
                <p>Agrega productos para comenzar a comprar.</p>
                <a href="/Product/Index" class="btn btn-primary">Ir a la Tienda</a>
            </div>
        }
        else
        {
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Producto</th>
                                    <th>Precio</th>
                                    <th>Cantidad</th>
                                    <th>Subtotal</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.NombreProducto</strong>
                                        </td>
                                        <td>$@item.Precio.ToString("F2")</td>
                                        <td>
                                            <form method="POST" action="/Cart/UpdateQuantity" class="d-flex align-items-center" style="max-width: 150px;">
                                                <input type="hidden" name="productoId" value="@item.ProductoId">
                                                <input type="number" name="cantidad" value="@item.Cantidad" min="1" class="form-control form-control-sm me-2" style="width: 70px;">
                                                <button type="submit" class="btn btn-sm btn-outline-primary">‚úì</button>
                                            </form>
                                        </td>
                                        <td><strong>$@item.Subtotal.ToString("F2")</strong></td>
                                        <td>
                                            <form method="POST" action="/Cart/RemoveFromCart" style="display: inline;">
                                                <input type="hidden" name="productoId" value="@item.ProductoId">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    üóëÔ∏è Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-light">
                                    <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                                    <td colspan="2">
                                        <h4 class="text-success mb-0">$@Model.Sum(c => c.Subtotal).ToString("F2")</h4>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="/Product/Index" class="btn btn-secondary">
                            ‚Üê Seguir Comprando
                        </a>
                        <a href="/Cart/Checkout" class="btn btn-success btn-lg">
                            Finalizar Compra ‚Üí
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
