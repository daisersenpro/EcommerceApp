@{
    var usuarioId = Context.Session.GetString("UsuarioId");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Nombre - E-Commerce</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav>
        <h1>ðŸ›’ E-Commerce</h1>
        <div>
            <a href="/Home/Index">Inicio</a>
            <a href="/Product/Index">Productos</a>
            @if (!string.IsNullOrEmpty(usuarioId))
            {
                <a href="/Dashboard/Index">Dashboard</a>
                <a href="/Dashboard/Logout">Logout</a>
            }
            else
            {
                <a href="/Account/Login">Login</a>
            }
        </div>
    </nav>

    <div class="container">
        <div class="hero">
            <h2>@Model.Nombre</h2>
            
            <div style="text-align: left; margin-top: 2rem;">
                <p><strong>DescripciÃ³n:</strong> @Model.Descripcion</p>
                <p><strong>CategorÃ­a:</strong> @Model.Categoria</p>
                <p><strong>Stock Disponible:</strong> @Model.Stock unidades</p>
                <p class="product-price" style="margin: 1rem 0;">Precio: $@Model.Precio.ToString("F2")</p>

                @if (Model.Stock > 0)
                {
                    <div style="margin-top: 1.5rem;">
                        <form method="POST" action="/Cart/AddToCart" style="display: inline;">
                            <input type="hidden" name="productoId" value="@Model.Id">
                            <div class="form-group">
                                <label for="cantidad">Cantidad:</label>
                                <input type="number" id="cantidad" name="cantidad" value="1" min="1" max="@Model.Stock" style="width: 100px;">
                            </div>
                            <button type="submit" class="btn btn-success" style="margin-top: 0.5rem;">ðŸ›’ Agregar al Carrito</button>
                        </form>
                    </div>
                }
                else
                {
                    <p style="color: red; margin-top: 1rem;"><strong>Producto sin stock</strong></p>
                }

                <a href="/Product/Index" class="btn btn-primary" style="margin-top: 1rem;">Volver a Productos</a>
            </div>
        </div>
    </div>
</body>
</html>
