@model EcommerceApp.Models.Producto
@{
    ViewData["Title"] = Model.Nombre;
    var usuarioId = Context.Session.GetString("UsuarioId");
    var rol = Context.Session.GetString("Rol");
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3>@Model.Nombre</h3>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <p><strong>Descripci√≥n:</strong> @Model.Descripcion</p>
                </div>
                <div class="mb-3">
                    <p><strong>Categor√≠a:</strong> <span class="badge bg-secondary">@Model.Categoria</span></p>
                </div>
                <div class="mb-3">
                    <p><strong>Stock Disponible:</strong> 
                        <span class="badge @(Model.Stock > 0 ? "bg-success" : "bg-danger")">@Model.Stock unidades</span>
                    </p>
                </div>
                <div class="mb-4">
                    <h4 class="text-success">Precio: $@Model.Precio.ToString("F2")</h4>
                </div>

                @if (Model.Stock > 0 && !string.IsNullOrEmpty(usuarioId) && rol != "Admin")
                {
                    <div class="mb-3">
                        <form method="POST" action="/Cart/AddToCart">
                            <input type="hidden" name="productoId" value="@Model.Id">
                            <div class="mb-3">
                                <label for="cantidad" class="form-label">Cantidad:</label>
                                <input type="number" id="cantidad" name="cantidad" value="1" min="1" max="@Model.Stock" class="form-control" style="width: 150px;">
                            </div>
                            <button type="submit" class="btn btn-success btn-lg">üõí Agregar al Carrito</button>
                        </form>
                    </div>
                }
                else if (Model.Stock == 0)
                {
                    <div class="alert alert-danger">
                        <strong>‚ö†Ô∏è Producto sin stock</strong>
                    </div>
                }
                else if (string.IsNullOrEmpty(usuarioId))
                {
                    <div class="alert alert-info">
                        <strong>‚ÑπÔ∏è Inicia sesi√≥n para agregar productos al carrito</strong>
                        <a href="/Account/Login" class="btn btn-primary btn-sm ms-2">Iniciar Sesi√≥n</a>
                    </div>
                }

                <div class="mt-4">
                    <a href="/Product/Index" class="btn btn-secondary">‚Üê Volver a Productos</a>
                </div>
            </div>
        </div>
    </div>
</div>
