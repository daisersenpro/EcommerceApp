@model List<EcommerceApp.Models.Producto>
@{
    ViewData["Title"] = "Productos";
    var rol = Context.Session.GetString("Rol");
    var usuarioId = Context.Session.GetString("UsuarioId");
}

<div class="row">
    <div class="col-12">
        <h2 class="mb-4">üõçÔ∏è Nuestros Productos</h2>

        @if (rol == "Admin")
        {
            <a href="/Product/Create" class="btn btn-success mb-3">‚ûï Agregar Nuevo Producto</a>
        }

        @if (Model?.Count > 0)
        {
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var producto in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@producto.Nombre</h5>
                                <p class="card-text">@producto.Descripcion</p>
                                <p class="mb-1"><strong>Categor√≠a:</strong> @producto.Categoria</p>
                                <p class="mb-2"><strong>Stock:</strong> @producto.Stock unidades</p>
                                <h4 class="text-success">$@producto.Precio.ToString("F2")</h4>
                            </div>
                            <div class="card-footer bg-white">
                                <a href="/Product/Details/@producto.Id" class="btn btn-primary btn-sm w-100 mb-2">Ver Detalles</a>
                                
                                @if (!string.IsNullOrEmpty(usuarioId) && rol != "Admin" && producto.Stock > 0)
                                {
                                    <form method="POST" action="/Cart/AddToCart">
                                        <input type="hidden" name="productoId" value="@producto.Id">
                                        <input type="hidden" name="cantidad" value="1">
                                        <button type="submit" class="btn btn-success btn-sm w-100">üõí Agregar al Carrito</button>
                                    </form>
                                }
                                
                                @if (rol == "Admin")
                                {
                                    <a href="/Product/Edit/@producto.Id" class="btn btn-warning btn-sm w-100 mb-1">‚úèÔ∏è Editar</a>
                                    <form method="POST" action="/Product/Delete/@producto.Id" class="d-inline w-100">
                                        <button type="submit" class="btn btn-danger btn-sm w-100" onclick="return confirm('¬øEliminar este producto?');">üóëÔ∏è Eliminar</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <p class="mb-0">No hay productos disponibles.</p>
            </div>
        }
    </div>
</div>
